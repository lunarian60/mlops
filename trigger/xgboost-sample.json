{
  "apiVersion": "sagemaker.aws.amazon.com/v1",
  "kind": "TrainingJob",
  "metadata": {
    "name": "xgboost-abalone"
  },
  "spec": {
    "hyperParameters": [
      {
        "name": "max_depth",
        "value": "4"
      },
      {
        "name": "eta",
        "value": "0.2"
      },
      {
        "name": "gamma",
        "value": "4"
      },
      {
        "name": "min_child_weight",
        "value": "6"
      },
      {
        "name": "subsample",
        "value": "0.7"
      },
      {
        "name": "objective",
        "value": "reg:linear"
      },
      {
        "name": "num_round",
        "value": "50"
      },
      {
        "name": "verbosity",
        "value": "2"
      }
    ],
    "algorithmSpecification": {
      "trainingImage": "366743142698.dkr.ecr.ap-northeast-2.amazonaws.com/sagemaker-xgboost:1.3-1",
      "trainingInputMode": "File"
    },
    "roleArn": {roleArn},
    "region": "ap-northeast-2",
    "outputDataConfig": {
      "s3OutputPath": "{outputPath}"
    },
    "resourceConfig": {
      "instanceCount": 1,
      "instanceType": "ml.m5.2xlarge",
      "volumeSizeInGB": 5
    },
    "stoppingCondition": {
      "maxRuntimeInSeconds": 3600
    },
    "inputDataConfig": [
      {
        "channelName": "train",
        "dataSource": {
          "s3DataSource": {
            "s3DataType": "S3Prefix",
            "s3Uri": "{trainSourceUri}",
            "s3DataDistributionType": "FullyReplicated"
          }
        },
        "contentType": "text/csv",
        "compressionType": "None"
      },
      {
        "channelName": "validation",
        "dataSource": {
          "s3DataSource": {
            "s3DataType": "S3Prefix",
            "s3Uri": "{validationUri}",
            "s3DataDistributionType": "FullyReplicated"
          }
        },
        "contentType": "text/csv",
        "compressionType": "None"
      }
    ],
    "tags": [
      {
        "key": "tagKey",
        "value": "tagValue"
      }
    ]
  }
}
